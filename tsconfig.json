{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es6"
    ],
    "types": [
      "reflect-metadata"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": false,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "components/*": [
        "components/*"
      ],
      "hooks/*": [
        "hooks/*"
      ]
    },
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "svg/custom.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "jest.config.js",
    "components/features/factory/factory.js",
    "components/features/factory/transform-field.js",
    "components/features/factory/index.js"  ],
  "exclude": [
    "node_modules"
  ]
}
